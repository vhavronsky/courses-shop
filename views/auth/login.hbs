<div class="auth">
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6"><a class="active" href="#login">Login</a></li>
                <li class="tab col s6"><a href="#register">Register</a></li>
            </ul>
        </div>
        <div id="login" class="col s6 offset-s3">

            <h1 style="text-align: center;">Log into account</h1>
                        
            {{#if loginError}}
                <p class="alert">{{loginError}}</p>
            {{/if}}

            <form action="/auth/login" method="POST" novalidate>
                <div class="input-field">
                    <input id="email" name="email" type="email" class="validate" required>
                    <label for="email">email</label>
                    <span class="helper-text" data-error="wrong email"></span>
                </div>

                <div class="input-field">
                    <input id="password" name="password" type="password" class="validate" required>
                    <label for="password">password</label>
                    <span class="helper-text" data-error="wrong password"></span>
                </div>

                <input type="hidden" name="_csrf" value="{{ csrf }}">

                <p><a href="/auth/reset">Forgot password?</a></p>
                <button type="submit" class="btn btn-primary">Login</button>
            </form>

        </div>

        <div id="register" class="col s6 offset-s3">

            <h1 style="text-align: center;">Registration</h1>

            {{#if registerError}}
                <p class="alert">{{registerError}}</p>
            {{/if}}

            <form action="/auth/register" method="POST" novalidate>
                <div class="input-field">
                    <input id="remail" name="email" type="email" class="validate" required>
                    <label for="remail">email</label>
                    <span class="helper-text" data-error="wrong email"></span>
                </div>

                <div class="input-field">
                    <input id="rpassword" name="password" type="password" class="validate" required>
                    <label for="rpassword">password</label>
                    <span class="helper-text" data-error="wrong password"></span>
                </div>

                <div class="input-field">
                    <input id="confirm" name="confirm" type="password" class="validate" required>
                    <label for="confirm">confirm the password</label>
                    <span class="helper-text" data-error="wrong"></span>
                </div>

                <div class="input-field">
                    <input id="name" name="name" type="text" class="validate" required>
                    <label for="name">your name</label>
                    <span class="helper-text" data-error="wrong name"></span>
                </div>

                <input type="hidden" name="_csrf" value="{{ csrf }}">

                <button type="submit" class="btn btn-primary">Register</button>
            </form>

        </div>
    </div>
</div>    